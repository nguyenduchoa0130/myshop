<Window x:Class="MyShop.UI.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop.UI"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="Trang cấu hình" Height="350" Width="310" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" Background="#90d0fe">
    <Grid Name="MainContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="239*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock
            Text="Thông tin kết nối database"
            Margin="10,0,10,0"
            Foreground="#8B4000"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            FontFamily="Segoe UI" Grid.ColumnSpan="2"
            />

        <Border 
            Grid.Row="1"
            BorderThickness="0.5" BorderBrush="Orange" CornerRadius="5" 
            Background="White"
            Height="30"
            Width="275"
            Margin="10,14,0,14"
            HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid
                Width="265"
                Margin="0"
                HorizontalAlignment="Center">
                <TextBox 
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    FontSize="13"
                    Width="265"
                    x:Name="ServerTermTextBox">
                </TextBox>
                <TextBlock IsHitTestVisible="False" Text="Nhập server name" 
                               VerticalAlignment="Center"
                               FontSize="13"
                               HorizontalAlignment="Left" Margin="5,0,0,0"
                               Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=ServerTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <Border 
            Grid.Row="2"
            BorderThickness="0.5" BorderBrush="Orange" CornerRadius="5" 
            Background="White"
            Height="30"
            Width="275"
            Margin="10,14,0,14"
            HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid
                Width="265"
                Margin="0"
                HorizontalAlignment="Center">
                <TextBox 
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    FontSize="13"
                    Width="265"
                    x:Name="UsernameTermTextBox">
                </TextBox>
                <TextBlock IsHitTestVisible="False" Text="Nhập username" 
                               VerticalAlignment="Center"
                               FontSize="13"
                               HorizontalAlignment="Left" Margin="5,0,0,0"
                               Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UsernameTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <Border 
            Grid.Row="3"
            BorderThickness="0.5" BorderBrush="Orange" CornerRadius="5" 
            Background="White"
            Height="30"
            Width="275"
            Margin="10,14,0,13"
            HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid
                Width="265"
                Margin="0"
                HorizontalAlignment="Center">
                <TextBox 
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    FontSize="13"
                    Width="265"
                    x:Name="PasswordTermTextBox">
                </TextBox>
                <TextBlock IsHitTestVisible="False" Text="Nhập password" 
                               VerticalAlignment="Center"
                               FontSize="13"
                               HorizontalAlignment="Left" Margin="5,0,0,0"
                               Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=PasswordTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <Border 
            Grid.Row="4"
            BorderThickness="0.5" BorderBrush="Orange" CornerRadius="5" 
            Background="White"
            Height="30"
            Width="275"
            Margin="10,14,0,14"
            HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid
                Width="265"
                Margin="0"
                HorizontalAlignment="Center">
                <TextBox 
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    FontSize="13"
                    Width="265"
                    x:Name="DatabaseTermTextBox">
                </TextBox>
                <TextBlock IsHitTestVisible="False" Text="Nhập tên database" 
                               VerticalAlignment="Center"
                               FontSize="13"
                               HorizontalAlignment="Left" Margin="5,0,0,0"
                               Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=DatabaseTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        <Button
                Grid.Row="5" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Name="Button"
                Width="110"
                Height="35"
                Style="{StaticResource MyButtonStyle}"
                BorderThickness="0.5"
                BorderBrush="Orange"
                Click="Button_Click" Margin="100,0,0,0"
            >
            <StackPanel
                Orientation="Horizontal">
                <fa:ImageAwesome 
                        Name="Logout"
                        Width="16"
                        Height="16"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Icon="SignIn"
                        Margin="5"
                        Foreground="#8B4000"
                        />
                <TextBlock
                        FontWeight="Bold"
                        Foreground="#8B4000"
                        VerticalAlignment="Center"
                    >Kết nối</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
